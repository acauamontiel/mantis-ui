/*
 * Tables
 */

.table
	@extends .p
	width 100%
	max-width 100%

	caption
		@extends .small
		@extends .em
		padding $caption-padding
		color $caption-color

	th
		@extends .strong
		padding $th-padding
		border-bottom $th-border-bottom

	td
		padding $td-padding
		border-top $td-border-top

	tbody
		tr
			&:first-child
				td
					border none

	tfoot
		@extends .em
		color $tbody-color

	&--striped
		tbody
			tr
				&:nth-child(odd)
					background $table-striped-background

	&--hoverable
		tbody
			tr
				transition $table-hoverable-transition

				&:hover
					background $table-hoverable-background

	&--framed
		border $table-framed-border
